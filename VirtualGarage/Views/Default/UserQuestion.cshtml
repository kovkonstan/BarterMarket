@model BarterMarket.Models.UserQuestionModel

@{
    ViewBag.Title = "Задайте свой вопрос | PR Money Market";
    Layout = "~/Views/Shared/Layouts/_Layout.cshtml";
}
<div class="container resume blacktext">
    <h2>Задайте свой вопрос</h2>

    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/calendar/jquery-ui-1.8.16.custom.css")" />
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-ui-1.8.16.custom.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.ui.datepicker-ru.js")"></script>

    @using (Html.BeginForm("UserQuestion", "Default", FormMethod.Post, null ))
    {
        @Html.ValidationSummary(true)
    
            <div class="editor-label">
                @Html.LabelFor(model => model.UserName)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.UserName)
                @Html.ValidationMessageFor(model => model.UserName)
            </div>
    
            <div class="editor-label">
                @Html.LabelFor(model => model.UserEmail)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.UserEmail)
                @Html.ValidationMessageFor(model => model.UserEmail)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.UserMessage)
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(model => model.UserMessage)
                @Html.ValidationMessageFor(model => model.UserMessage)
            </div>

            <p>
                <input type="submit" value="Задать вопрос" class="button" />
            </p>
    }
</div>
<div class="blankSeparator1"></div>