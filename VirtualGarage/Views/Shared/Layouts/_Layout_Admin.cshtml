<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link rel="icon" href="@Url.Content("~/Content/favicon.ico")" type="image/x-icon" />  
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>


    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/MainStyles.css")" media="screen" />
    @RenderSection("Head", false)
</head>

<body>
    @if (Request.IsAuthenticated)
    {
        
    
        <div id="wrap-admin">

            <div id="header">
                <img src="@Url.Content("~/Content/images/car-icon-for-use-with-signs-or-buttons_17-1202175859.jpg")" alt="Barter Market" id="img_logo" />
                <div class="headerleft">
                    <h1><a href="@Url.Content("~/")">Admin</a></h1>
                </div>
                
            
            </div>

        <div id="menu">
            <ul>
                <li>@Html.ActionLink("Пользователи", "Users", "Admin")</li>                
            </ul>
        
            <ul>
                <li>@Html.ActionLink("Запросы на регистрацию", "OfferRequests", "Admin")</li>                
            </ul>

            <ul>
                <li>@Html.ActionLink("Предложения", "Offers", "Admin")</li>                
            </ul>

@*            <ul>
                <li>@Html.ActionLink("Сертификаты", "Offers", "Admin")</li>                
            </ul>

            <ul>
                <li>@Html.ActionLink("Операции со счетами", "Index", "Admin")</li>                
            </ul>*@
        </div>

        <div id="content">

            @RenderBody()
 
            <div style="clear: both;"> </div>

        </div>

        <div id="footer">
            &copy; Copyright 2018-@DateTime.Now.Year.ToString() by <a href="http://ya.ru/">Kokos</a></div>
        </div>
    }
    else
    {
        @Html.Partial("LoginDiv", new BarterMarket.Models.LoginModel())
    }
</body>
</html>





