@model BarterMarket.Models.RegisterModel
@using BarterMarket.HtmlHelpers

@{
    ViewBag.Title = "Регистрация | PR Money Market";
    Layout = "~/Views/Shared/Layouts/_Layout.cshtml";
}

<script src="//ulogin.ru/js/ulogin.js"></script>
<div class="blankSeparator"></div>
<div class="container resume blacktext">

    <h2>Регистрация</h2>
       
        @*<div id="uLogin" data-ulogin="display=panel;theme=classic;fields=first_name,last_name;providers=vkontakte,odnoklassniki,mailru,google,facebook;hidden=other;redirect_uri=https%3A%2F%2Fpr-money.com;mobilebuttons=0;"></div>*@
        <div id="uLogin" data-ulogin="display=panel;theme=classic;fields=first_name,last_name;providers=vkontakte,odnoklassniki,mailru,google,facebook;hidden=other;redirect_uri=http%3A%2F%2Flocalhost:34448;mobilebuttons=0;"></div>
        <br />
        <p>
            Используйте следующую форму для создания новой учетной записи. <br />
            Длина пароля должна составлять не менее 6 знаков.
        </p>

    @using (Html.BeginForm()) {
        @Html.ValidationSummary(true, "Не удалось создать учетную запись. Исправьте ошибки и повторите попытку.")
                    
            <div class="editor-label">
                @Html.LabelFor(model => model.UserName)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.UserName)
                @Html.ValidationMessageFor(model => model.UserName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.UserEmail)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.UserEmail)
                @Html.ValidationMessageFor(model => model.UserEmail)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Password)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Password)
                @Html.ValidationMessageFor(model => model.Password)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.ConfirmPassword)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.ConfirmPassword)
                @Html.ValidationMessageFor(model => model.ConfirmPassword)
            </div>
    
            <div class="editor-label">
                @Html.LabelFor(model => model.CompanyName)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.CompanyName)
                @Html.ValidationMessageFor(model => model.CompanyName)
            </div>
    
            <div class="editor-label">
                @Html.LabelFor(model => model.CompanyDetails)
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(model => model.CompanyDetails)
                @Html.ValidationMessageFor(model => model.CompanyDetails)
            </div>

            <div class="editor-label">
                @Html.EditorFor(model => model.IsReadRules)
                Я прочитал и обязуюсь выполнять @Html.ActionLink("Правила сайта", "Rules", "Default")
                <div class="editor-field">
                @Html.ValidationMessageFor(model => model.IsReadRules)
                </div>
            
            </div>
    
            @*<div>
                <div class="editor-label">Введите слова c картинки</div>
                @Html.Raw(Html.GenerateCaptcha())
                @Html.ValidationMessage("Captcha")
            </div>*@


            <p>
                <input type="submit" value="Регистрация" class="button" />
            </p>
    }
</div> 
<div class="blankSeparator"></div>
